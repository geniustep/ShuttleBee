<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Message Template Form View -->
    <record id="view_shuttle_message_template_form" model="ir.ui.view">
        <field name="name">shuttle.message.template.form</field>
        <field name="model">shuttle.message.template</field>
        <field name="arch" type="xml">
            <form string="Message Template">
                <header>
                    <button name="action_set_as_default" 
                            type="object" 
                            string="Set as Default" 
                            class="btn-primary"
                            invisible="is_default"/>
                    <field name="is_active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_preview" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-eye">
                            <span>Preview</span>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" title="Default" bg_color="text-bg-success" invisible="not is_default"/>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Template Name"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Classification">
                            <field name="notification_type"/>
                            <field name="channel"/>
                            <field name="language"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group string="Settings">
                            <field name="sequence"/>
                            <field name="is_default"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Message Content" name="content">
                            <group>
                                <field name="subject" invisible="channel not in ['email', 'all']"/>
                            </group>
                            <separator string="Message Body"/>
                            <field name="body" placeholder="Enter your message here..."/>
                            
                            <div class="alert alert-info mt-3" role="status">
                                <h5>المتغيرات المتاحة / Available Placeholders:</h5>
                                <div class="row">
                                    <div class="col-md-6">
                                        <ul class="mb-0">
                                            <li><code>{passenger_name}</code> - اسم الراكب</li>
                                            <li><code>{driver_name}</code> - اسم السائق</li>
                                            <li><code>{vehicle_name}</code> - اسم المركبة</li>
                                            <li><code>{vehicle_plate}</code> - لوحة المركبة</li>
                                            <li><code>{stop_name}</code> - نقطة التوقف</li>
                                        </ul>
                                    </div>
                                    <div class="col-md-6">
                                        <ul class="mb-0">
                                            <li><code>{trip_name}</code> - اسم الرحلة</li>
                                            <li><code>{trip_date}</code> - تاريخ الرحلة</li>
                                            <li><code>{trip_time}</code> - وقت الرحلة</li>
                                            <li><code>{eta}</code> - الوقت المتوقع (دقائق)</li>
                                            <li><code>{company_name}</code> - اسم الشركة</li>
                                            <li><code>{company_phone}</code> - هاتف الشركة</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </page>
                        
                        <page string="HTML Content (Email)" name="html_content" invisible="channel not in ['email', 'all']">
                            <field name="body_html"/>
                        </page>
                        
                        <page string="Preview" name="preview">
                            <group>
                                <field name="preview_text" readonly="True" widget="text"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Message Template List View -->
    <record id="view_shuttle_message_template_list" model="ir.ui.view">
        <field name="name">shuttle.message.template.list</field>
        <field name="model">shuttle.message.template</field>
        <field name="arch" type="xml">
            <list string="Message Templates" default_order="notification_type, language, sequence">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="notification_type"/>
                <field name="channel"/>
                <field name="language"/>
                <field name="is_default" widget="boolean_toggle"/>
                <field name="is_active" widget="boolean_toggle"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Message Template Kanban View -->
    <record id="view_shuttle_message_template_kanban" model="ir.ui.view">
        <field name="name">shuttle.message.template.kanban</field>
        <field name="model">shuttle.message.template</field>
        <field name="arch" type="xml">
            <kanban default_group_by="notification_type" class="o_kanban_mobile">
                <field name="name"/>
                <field name="notification_type"/>
                <field name="channel"/>
                <field name="language"/>
                <field name="is_default"/>
                <field name="is_active"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <t t-if="record.is_default.raw_value">
                                    <span class="badge text-bg-success">Default</span>
                                </t>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="d-flex gap-2 flex-wrap">
                                    <span class="badge text-bg-primary">
                                        <field name="channel"/>
                                    </span>
                                    <span class="badge text-bg-secondary">
                                        <field name="language"/>
                                    </span>
                                </div>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <t t-if="!record.is_active.raw_value">
                                        <span class="badge text-bg-danger">Inactive</span>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Message Template Search View -->
    <record id="view_shuttle_message_template_search" model="ir.ui.view">
        <field name="name">shuttle.message.template.search</field>
        <field name="model">shuttle.message.template</field>
        <field name="arch" type="xml">
            <search string="Search Templates">
                <field name="name"/>
                <field name="notification_type"/>
                <field name="body"/>
                <separator/>
                <filter string="Active" name="active" domain="[('is_active', '=', True)]"/>
                <filter string="Default" name="default" domain="[('is_default', '=', True)]"/>
                <separator/>
                <filter string="Arabic" name="arabic" domain="[('language', '=', 'ar')]"/>
                <filter string="English" name="english" domain="[('language', '=', 'en')]"/>
                <filter string="French" name="french" domain="[('language', '=', 'fr')]"/>
                <separator/>
                <filter string="WhatsApp" name="whatsapp" domain="[('channel', 'in', ['whatsapp', 'all'])]"/>
                <filter string="SMS" name="sms" domain="[('channel', 'in', ['sms', 'all'])]"/>
                <filter string="Email" name="email" domain="[('channel', 'in', ['email', 'all'])]"/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="group_type" context="{'group_by': 'notification_type'}"/>
                    <filter string="Channel" name="group_channel" context="{'group_by': 'channel'}"/>
                    <filter string="Language" name="group_language" context="{'group_by': 'language'}"/>
                    <filter string="Company" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action to open Message Templates -->
    <record id="action_shuttle_message_template" model="ir.actions.act_window">
        <field name="name">Message Templates</field>
        <field name="res_model">shuttle.message.template</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="search_view_id" ref="view_shuttle_message_template_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first message template
            </p>
            <p>
                قم بإنشاء قوالب رسائل مخصصة لكل نوع من الإشعارات.
                <br/>
                يمكنك استخدام المتغيرات مثل {passenger_name} و {driver_name} لتخصيص الرسائل.
            </p>
        </field>
    </record>

    <!-- Action to create default templates -->
    <record id="action_create_default_templates" model="ir.actions.server">
        <field name="name">Create Default Templates</field>
        <field name="model_id" ref="model_shuttle_message_template"/>
        <field name="binding_model_id" ref="model_shuttle_message_template"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
model.create_default_templates()
action = {'type': 'ir.actions.client', 'tag': 'reload'}
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_shuttle_message_template"
              name="Message Templates"
              parent="shuttlebee.menu_shuttle_configuration"
              action="action_shuttle_message_template"
              sequence="25"
              groups="shuttlebee.group_shuttle_manager"/>
</odoo>


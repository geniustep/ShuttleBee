<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Partner Form View Extension -->
    <record id="view_partner_form_shuttle" model="ir.ui.view">
        <field name="name">res.partner.form.shuttle</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add button in button box -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_shuttle_trips"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-bus"
                        invisible="not is_shuttle_passenger">
                    <field name="total_trips" widget="statinfo" string="Trips"/>
                </button>
            </xpath>

            <!-- Add Shuttle tab -->
            <xpath expr="//notebook" position="inside">
                <page string="Shuttle Information" name="shuttle_info">
                    <group>
                        <group string="Passenger Info">
                            <field name="is_shuttle_passenger"/>
                            <field name="is_auto_notification" invisible="not is_shuttle_passenger"/>
                            <field name="shuttle_trip_direction" invisible="not is_shuttle_passenger"/>
                        </group>
                        <group string="Statistics" invisible="not is_shuttle_passenger">
                            <field name="total_trips"/>
                            <field name="present_trips"/>
                            <field name="absent_trips"/>
                            <field name="attendance_rate" widget="progressbar"/>
                        </group>
                    </group>
                    
                    <group string="Pickup Location (Default)" invisible="not is_shuttle_passenger">
                        <div class="alert alert-info" role="alert">
                            <strong>Default Pickup:</strong> GPS Coordinates are used by default. You can override with a specific stop if needed.
                        </div>
                        <field name="use_gps_for_pickup"/>
                        <field name="shuttle_latitude"
                               invisible="not use_gps_for_pickup"
                               required="use_gps_for_pickup"
                               help="GPS latitude for pickup location (used by default when enabled)"/>
                        <field name="shuttle_longitude"
                               invisible="not use_gps_for_pickup"
                               required="use_gps_for_pickup"
                               help="GPS longitude for pickup location (used by default when enabled)"/>
                        <field name="default_pickup_stop_id"
                               invisible="use_gps_for_pickup"
                               required="not use_gps_for_pickup"
                               help="Optional: Override GPS coordinates with a specific stop"/>
                    </group>
                    
                    <group string="Dropoff Location (Default)" invisible="not is_shuttle_passenger">
                        <div class="alert alert-info" role="alert" colspan="2">
                            <strong>Default Dropoff:</strong> Company GPS Coordinates 
                            <span invisible="not use_gps_for_dropoff or not company_id">
                                (<field name="company_id" readonly="1" invisible="not use_gps_for_dropoff" widget="many2one" nolabel="1"/>)
                            </span>
                            are used by default. You can override with a specific stop if needed.
                        </div>
                        <field name="use_gps_for_dropoff" string="Use Company GPS Coordinates for Dropoff"/>
                        <field name="default_dropoff_stop_id"
                               invisible="use_gps_for_dropoff"
                               required="not use_gps_for_dropoff"
                               help="Required if GPS coordinates are not used. Override company GPS coordinates with a specific stop."/>
                    </group>
                    
                    <group string="Guardian Information" invisible="not is_shuttle_passenger">
                        <field name="has_guardian"/>
                        <group string="Father Information" invisible="not has_guardian">
                            <field name="father_name" string="Father Name"/>
                            <field name="father_phone" string="Father Phone"/>
                        </group>
                        <group string="Mother Information" invisible="not has_guardian">
                            <field name="mother_name" string="Mother Name"/>
                            <field name="mother_phone" string="Mother Phone"/>
                        </group>
                    </group>
                    
                    <group string="Temporary/Secondary Address" invisible="not is_shuttle_passenger">
                        <field name="temporary_address" nolabel="1"
                               placeholder="Enter temporary or secondary address..."/>
                        <field name="temporary_latitude"
                               help="GPS latitude for temporary/secondary location"/>
                        <field name="temporary_longitude"
                               help="GPS longitude for temporary/secondary location"/>
                        <field name="temporary_contact_name"
                               string="Contact Name"
                               help="Name of contact person related to this temporary/secondary address"/>
                        <field name="temporary_contact_phone"
                               string="Contact Phone"
                               help="Phone number of contact person related to this temporary/secondary address"/>
                    </group>
                    
                    <group string="Shuttle Notes" invisible="not is_shuttle_passenger">
                        <field name="shuttle_notes" nolabel="1"
                               placeholder="Special requirements or notes for transportation..."/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Passengers Action -->
    <record id="action_shuttle_passengers" model="ir.actions.act_window">
        <field name="name">Shuttle Passengers</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[('is_shuttle_passenger', '=', True)]</field>
        <field name="context">{'default_is_shuttle_passenger': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first shuttle passenger!
            </p>
            <p>
                Register passengers who will use the shuttle service.
            </p>
        </field>
    </record>
</odoo>

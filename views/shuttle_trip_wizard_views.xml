<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Wizard Form View -->
    <record id="view_shuttle_trip_wizard_form" model="ir.ui.view">
        <field name="name">shuttle.trip.wizard.form</field>
        <field name="model">shuttle.trip.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Trip from Passenger Group">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="group_id" readonly="1" nolabel="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="trip_date" required="1"/>
                            <field name="driver_id"/>
                            <field name="vehicle_id"/>
                            <field name="total_seats"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Pickup Trip">
                            <group>
                                <field name="create_pickup_trip"/>
                                <field name="pickup_start_time" 
                                       widget="datetime"
                                       required="create_pickup_trip"
                                       invisible="not create_pickup_trip"/>
                                <field name="pickup_arrival_time"
                                       widget="datetime"
                                       invisible="not create_pickup_trip"/>
                            </group>
                        </page>
                        <page string="Dropoff Trip">
                            <group>
                                <field name="create_dropoff_trip"/>
                                <field name="dropoff_start_time"
                                       widget="datetime"
                                       required="create_dropoff_trip"
                                       invisible="not create_dropoff_trip"/>
                                <field name="dropoff_arrival_time"
                                       widget="datetime"
                                       invisible="not create_dropoff_trip"/>
                            </group>
                        </page>
                        <page string="Return Trip (Round Trip)">
                            <group>
                                <field name="create_return_trip"/>
                                <field name="return_trip_start_time"
                                       widget="datetime"
                                       required="create_return_trip"
                                       invisible="not create_return_trip"
                                       placeholder="Start time for return trip"/>
                                <field name="return_trip_arrival_time"
                                       widget="datetime"
                                       invisible="not create_return_trip"
                                       placeholder="Arrival time for return trip"/>
                            </group>
                        </page>
                        <page string="Notes">
                            <field name="notes" nolabel="1" placeholder="Additional notes for the trips..."/>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Generate Trips" 
                            name="action_generate_trips" 
                            type="object" 
                            class="oe_highlight"/>
                    <button string="Cancel" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Wizard Action -->
    <record id="action_shuttle_trip_wizard" model="ir.actions.act_window">
        <field name="name">Generate Trip</field>
        <field name="res_model">shuttle.trip.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>


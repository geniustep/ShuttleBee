<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Return Trip Wizard Form View -->
    <record id="view_shuttle_return_trip_wizard_form" model="ir.ui.view">
        <field name="name">shuttle.return.trip.wizard.form</field>
        <field name="model">shuttle.return.trip.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Return Trip">
                <sheet>
                    <group>
                        <group>
                            <field name="trip_id"/>
                            <field name="return_trip_start_time" 
                                   widget="datetime"
                                   required="1"/>
                            <field name="return_trip_arrival_time"
                                   widget="datetime"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Create Return Trip" 
                            name="action_create_return_trip" 
                            type="object" 
                            class="oe_highlight"/>
                    <button string="Cancel" 
                            special="cancel" 
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Return Trip Wizard Action -->
    <record id="action_shuttle_return_trip_wizard" model="ir.actions.act_window">
        <field name="name">Create Return Trip</field>
        <field name="res_model">shuttle.return.trip.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

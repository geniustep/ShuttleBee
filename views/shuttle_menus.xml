<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_shuttle_root"
              name="ShuttleBee"
              web_icon="shuttlebee,static/description/icon.png"
              sequence="10"/>

    <!-- Operations Menu -->
    <menuitem id="menu_shuttle_operations"
              name="Operations"
              parent="menu_shuttle_root"
              sequence="10"/>

    <menuitem id="menu_shuttle_trips"
              name="Trips"
              parent="menu_shuttle_operations"
              action="action_shuttle_trip"
              sequence="10"/>

    <menuitem id="menu_shuttle_passengers"
              name="Passengers"
              parent="menu_shuttle_operations"
              action="action_shuttle_passengers"
              sequence="20"/>

    <menuitem id="menu_shuttle_groups"
              name="Passenger Groups"
              parent="menu_shuttle_operations"
              action="action_shuttle_passenger_group"
              sequence="30"/>

    <menuitem id="menu_shuttle_holidays"
              name="Holidays"
              parent="menu_shuttle_operations"
              action="action_shuttle_holiday"
              sequence="40"
              groups="group_shuttle_dispatcher"/>

    <menuitem id="menu_shuttle_group_exceptions"
              name="Group Exceptions"
              parent="menu_shuttle_operations"
              action="action_shuttle_passenger_group_holiday"
              sequence="45"
              groups="group_shuttle_dispatcher"/>

    <menuitem id="menu_shuttle_passenger_distribution"
              name="Passenger Distribution"
              parent="menu_shuttle_operations"
              action="action_shuttle_passenger_group_line"
              sequence="35"/>

    <!-- Configuration Menu -->
    <menuitem id="menu_shuttle_configuration"
              name="Configuration"
              parent="menu_shuttle_root"
              sequence="90"/>

    <menuitem id="menu_shuttle_stops"
              name="Stops"
              parent="menu_shuttle_configuration"
              action="action_shuttle_stop"
              sequence="10"
              groups="group_shuttle_dispatcher"/>

    <menuitem id="menu_shuttle_vehicles"
              name="Vehicles"
              parent="menu_shuttle_configuration"
              action="action_shuttle_vehicle"
              sequence="20"
              groups="group_shuttle_dispatcher"/>

    <!-- ShuttleBee Settings Action -->
    <record id="action_shuttlebee_res_config_settings_window" model="ir.actions.act_window">
        <field name="name">ShuttleBee Settings</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="target">inline</field>
        <field name="context">{'module': 'shuttlebee', 'default_module': 'shuttlebee', 'bin_size': False, 'open_tab': 'shuttlebee', 'active_id': False}</field>
    </record>

    <menuitem id="menu_shuttle_settings"
              name="Settings"
              parent="menu_shuttle_configuration"
              action="action_shuttlebee_res_config_settings_window"
              sequence="99"
              groups="group_shuttle_manager"/>

    <!-- Reports Menu -->
    <menuitem id="menu_shuttle_reports"
              name="Reports"
              parent="menu_shuttle_root"
              sequence="50"/>

    <menuitem id="menu_shuttle_notifications"
              name="Notification Log"
              parent="menu_shuttle_reports"
              action="action_shuttle_notification"
              sequence="20"/>
</odoo>

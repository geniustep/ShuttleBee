<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_shuttlebee" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.shuttlebee</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="ShuttleBee" name="shuttlebee"
                     groups="shuttlebee.group_shuttle_manager">
                    <block title="Notification Settings" name="notification_settings">
                        <setting string="Default Notification Channel">
                            <field name="shuttlebee_notification_channel"/>
                        </setting>
                        <setting string="Notification Timing">
                            <div class="text-muted">
                                Configure when to send notifications
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_approaching_minutes"/>
                                <field name="shuttlebee_approaching_minutes" class="oe_inline"/>
                                <span class="oe_inline"> minutes before arrival</span>
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_absent_timeout"/>
                                <field name="shuttlebee_absent_timeout" class="oe_inline"/>
                                <span class="oe_inline"> minutes after start to mark absent</span>
                            </div>
                        </setting>
                    </block>

                    <block title="API Configuration" name="api_configuration">
                        <setting string="SMS Settings">
                            <div class="mt-2">
                                <label for="shuttlebee_sms_api_url" string="API URL"/>
                                <field name="shuttlebee_sms_api_url" placeholder="https://api.sms-provider.com"/>
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_sms_api_key" string="API Key"/>
                                <field name="shuttlebee_sms_api_key" password="True"/>
                            </div>
                        </setting>
                    </block>

                    <block title="WhatsApp / WAHA Settings" name="whatsapp_settings">
                        <setting string="WhatsApp Provider">
                            <div class="text-muted mb-2">
                                Select the WhatsApp API provider to use
                            </div>
                            <field name="shuttlebee_whatsapp_provider_type"/>
                        </setting>
                        <setting string="WhatsApp API Configuration">
                            <div class="mt-2">
                                <label for="shuttlebee_whatsapp_api_url" string="API URL"/>
                                <field name="shuttlebee_whatsapp_api_url" 
                                       placeholder="http://localhost:3000"
                                       class="w-100"/>
                                <div class="text-muted mt-1">
                                    For WAHA: http://your-server:3000
                                </div>
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_whatsapp_api_key" string="API Key"/>
                                <field name="shuttlebee_whatsapp_api_key" password="True" class="w-100"/>
                            </div>
                        </setting>
                        <setting string="WAHA Session Settings" 
                                 invisible="shuttlebee_whatsapp_provider_type != 'waha_whatsapp'">
                            <div class="mt-2">
                                <label for="shuttlebee_waha_session" string="Session Name"/>
                                <field name="shuttlebee_waha_session" placeholder="default"/>
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_waha_webhook_url" string="Webhook URL"/>
                                <field name="shuttlebee_waha_webhook_url" 
                                       placeholder="https://your-odoo.com/shuttlebee/webhook/waha"
                                       class="w-100"/>
                            </div>
                            <div class="mt-2">
                                <span class="o_form_label">Session Status</span>
                                <field name="shuttlebee_waha_session_status" readonly="1"/>
                            </div>
                        </setting>
                        <setting string="WAHA Actions" 
                                 invisible="shuttlebee_whatsapp_provider_type != 'waha_whatsapp'">
                            <div class="d-flex flex-wrap gap-2 mt-2">
                                <button name="action_waha_test_connection" 
                                        type="object" 
                                        string="ðŸ”Œ Test Connection" 
                                        class="btn btn-secondary"/>
                                <button name="action_waha_create_session" 
                                        type="object" 
                                        string="âž• Create Session" 
                                        class="btn btn-primary"/>
                                <button name="action_waha_start_session" 
                                        type="object" 
                                        string="â–¶ï¸ Start Session" 
                                        class="btn btn-success"/>
                                <button name="action_waha_stop_session" 
                                        type="object" 
                                        string="â¹ï¸ Stop Session" 
                                        class="btn btn-warning"/>
                                <button name="action_waha_get_qr_code" 
                                        type="object" 
                                        string="ðŸ“± Get QR Code" 
                                        class="btn btn-info"/>
                            </div>
                        </setting>
                    </block>

                    <block title="Message Templates" name="message_templates">
                        <setting string="Approaching Message Template">
                            <field name="shuttlebee_template_approaching"
                                   placeholder="Use {passenger_name}, {driver_name}, {stop_name}, {eta}"/>
                        </setting>
                        <setting string="Arrived Message Template">
                            <field name="shuttlebee_template_arrived"
                                   placeholder="Use {passenger_name}, {driver_name}, {stop_name}"/>
                        </setting>
                    </block>

                    <block title="ðŸ—ºï¸ Route Optimizer" name="route_optimizer_settings">
                        <setting string="Route Optimizer API">
                            <div class="text-muted mb-2">
                                Configure the Route Optimizer service for automatic passenger sequence optimization.
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_route_optimizer_url" string="API URL"/>
                                <field name="shuttlebee_route_optimizer_url" 
                                       placeholder="https://route-optimizer.geniura.com/optimize"
                                       class="w-100"/>
                                <div class="text-muted mt-1">
                                    URL of the Route Optimizer API endpoint
                                </div>
                            </div>
                        </setting>
                        <setting string="Optimization Parameters">
                            <div class="row mt-2">
                                <div class="col-6">
                                    <label for="shuttlebee_route_optimizer_timeout" string="Timeout (seconds)"/>
                                    <field name="shuttlebee_route_optimizer_timeout" class="w-100"/>
                                </div>
                                <div class="col-6">
                                    <label for="shuttlebee_route_optimizer_max_time" string="Max Solve Time (seconds)"/>
                                    <field name="shuttlebee_route_optimizer_max_time" class="w-100"/>
                                </div>
                            </div>
                            <div class="mt-2">
                                <label for="shuttlebee_route_optimizer_speed_kmh" string="Average Speed (km/h)"/>
                                <field name="shuttlebee_route_optimizer_speed_kmh" class="oe_inline"/>
                                <span class="oe_inline"> km/h</span>
                                <div class="text-muted mt-1">
                                    Used for travel time estimation
                                </div>
                            </div>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_shuttle_group_schedule_wizard" model="ir.ui.view">
        <field name="name">shuttle.group.schedule.generate.wizard.form</field>
        <field name="model">shuttle.group.schedule.generate.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Trips from Schedule">
                <group>
                    <field name="group_id" readonly="1"/>
                    <field name="start_date"/>
                    <field name="weeks"/>
                </group>
                <group string="Trip Types">
                    <field name="include_pickup"/>
                    <field name="include_dropoff"/>
                    <field name="limit_to_week"/>
                </group>
                <footer>
                    <button string="Generate Trips"
                            type="object"
                            name="action_generate"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>


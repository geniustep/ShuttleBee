<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_shuttle_vehicle_list" model="ir.ui.view">
        <field name="name">shuttle.vehicle.list</field>
        <field name="model">shuttle.vehicle</field>
        <field name="arch" type="xml">
            <list string="Shuttle Vehicles" decoration-muted="not active">
                <field name="name"/>
                <field name="fleet_vehicle_id"/>
                <field name="license_plate"/>
                <field name="seat_capacity"/>
                <field name="driver_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_shuttle_vehicle_form" model="ir.ui.view">
        <field name="name">shuttle.vehicle.form</field>
        <field name="model">shuttle.vehicle</field>
        <field name="arch" type="xml">
            <form string="Shuttle Vehicle">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Vehicle name"/>
                        </h1>
                        <field name="license_plate" class="oe_inline" readonly="1"/>
                    </div>
                    <group>
                        <group>
                            <field name="fleet_vehicle_id"/>
                            <field name="seat_capacity"/>
                            <field name="driver_id"/>
                            <field name="color"/>
                        </group>
                        <group>
                            <field name="active"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <field name="note" placeholder="Notes / requirements..."/>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_shuttle_vehicle" model="ir.actions.act_window">
        <field name="name">Vehicles</field>
        <field name="res_model">shuttle.vehicle</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_shuttle_vehicles"
              name="Vehicles"
              parent="menu_shuttle_configuration"
              action="action_shuttle_vehicle"
              sequence="20"/>

</odoo>


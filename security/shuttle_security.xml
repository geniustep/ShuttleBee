<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Categories -->
        <record id="module_category_shuttlebee" model="ir.module.category">
            <field name="name">ShuttleBee</field>
            <field name="description">Shuttle Transportation Management</field>
            <field name="sequence">20</field>
        </record>

        <!-- Groups -->
        <record id="group_shuttle_user" model="res.groups">
            <field name="name">ShuttleBee User</field>
            <field name="category_id" ref="module_category_shuttlebee"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Basic access to view own trips</field>
        </record>

        <record id="group_shuttle_driver" model="res.groups">
            <field name="name">ShuttleBee Driver</field>
            <field name="category_id" ref="module_category_shuttlebee"/>
            <field name="implied_ids" eval="[(4, ref('group_shuttle_user'))]"/>
            <field name="comment">Can manage own trips and update passenger status</field>
        </record>

        <record id="group_shuttle_dispatcher" model="res.groups">
            <field name="name">ShuttleBee Dispatcher</field>
            <field name="category_id" ref="module_category_shuttlebee"/>
            <field name="implied_ids" eval="[(4, ref('group_shuttle_driver'))]"/>
            <field name="comment">Can create and manage all trips</field>
        </record>

        <record id="group_shuttle_manager" model="res.groups">
            <field name="name">ShuttleBee Manager</field>
            <field name="category_id" ref="module_category_shuttlebee"/>
            <field name="implied_ids" eval="[(4, ref('group_shuttle_dispatcher'))]"/>
            <field name="comment">Full access including settings and deletion</field>
        </record>

        <!-- Record Rules -->

        <!-- Shuttle Trip Rules -->
        <record id="shuttle_trip_rule_user" model="ir.rule">
            <field name="name">Shuttle Trip: User - Own Only</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="domain_force">['|', ('line_ids.passenger_id.user_ids', 'in', user.id), ('driver_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_shuttle_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="shuttle_trip_rule_driver" model="ir.rule">
            <field name="name">Shuttle Trip: Driver - Own Trips</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="domain_force">[('driver_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_shuttle_driver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="shuttle_trip_rule_dispatcher" model="ir.rule">
            <field name="name">Shuttle Trip: Dispatcher - All</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_shuttle_dispatcher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="shuttle_trip_rule_manager" model="ir.rule">
            <field name="name">Shuttle Trip: Manager - All</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_shuttle_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Multi-company Rules -->
        <record id="shuttle_trip_comp_rule" model="ir.rule">
            <field name="name">Shuttle Trip: Multi-Company</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>

        <!-- Shuttle Trip Line Rules -->
        <record id="shuttle_trip_line_rule_user" model="ir.rule">
            <field name="name">Trip Line: User</field>
            <field name="model_id" ref="model_shuttle_trip_line"/>
            <field name="domain_force">['|', ('passenger_id.user_ids', 'in', user.id), ('trip_id.driver_id', '=', user.id)]</field>

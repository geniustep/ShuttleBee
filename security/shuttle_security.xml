        </record>

        <record id="shuttle_vehicle_comp_rule" model="ir.rule">
            <field name="name">Vehicle: Multi-Company</field>
            <field name="model_id" ref="model_shuttle_vehicle"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>

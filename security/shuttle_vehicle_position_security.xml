<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Record Rules: Vehicle Position -->
        <record id="shuttle_vehicle_position_rule_driver" model="ir.rule">
            <field name="name">Vehicle Position: Driver - Own</field>
            <field name="model_id" ref="model_shuttle_vehicle_position"/>
            <field name="domain_force">[('driver_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('shuttlebee.group_shuttle_driver'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="shuttle_vehicle_position_rule_dispatcher" model="ir.rule">
            <field name="name">Vehicle Position: Dispatcher - All</field>
            <field name="model_id" ref="model_shuttle_vehicle_position"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('shuttlebee.group_shuttle_dispatcher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="shuttle_vehicle_position_rule_manager" model="ir.rule">
            <field name="name">Vehicle Position: Manager - All</field>
            <field name="model_id" ref="model_shuttle_vehicle_position"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('shuttlebee.group_shuttle_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Multi-company -->
        <record id="shuttle_vehicle_position_comp_rule" model="ir.rule">
            <field name="name">Vehicle Position: Multi-Company</field>
            <field name="model_id" ref="model_shuttle_vehicle_position"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('base.group_multi_company'))]"/>
        </record>
    </data>
</odoo>



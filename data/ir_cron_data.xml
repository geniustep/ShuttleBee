<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Auto Send Approaching Notifications -->
        <record id="ir_cron_send_approaching_notifications" model="ir.cron">
            <field name="name">ShuttleBee: Send Approaching Notifications</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_approaching_notifications()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Auto Mark Absent Passengers -->
        <record id="ir_cron_mark_absent_passengers" model="ir.cron">
            <field name="name">ShuttleBee: Auto Mark Absent Passengers</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="state">code</field>
            <field name="code">model._cron_mark_absent_passengers()</field>
            <field name="interval_number">10</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Daily Trip Summary -->
        <record id="ir_cron_daily_trip_summary" model="ir.cron">
            <field name="name">ShuttleBee: Send Daily Trip Summary</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="state">code</field>
            <field name="code">model._cron_send_daily_summary()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Weekly Schedule Trip Generation (Saturday 08:00) -->
        <record id="ir_cron_generate_weekly_schedule_trips" model="ir.cron">
            <field name="name">ShuttleBee: Generate Weekly Schedule Trips</field>
            <field name="model_id" ref="model_shuttle_passenger_group"/>
            <field name="state">code</field>
            <field name="code">model.cron_generate_weekly_trips()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">weeks</field>
            <field name="nextcall">1970-01-03 08:00:00</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Auto Confirm Upcoming Trips (default: 60 minutes before start) -->
        <record id="ir_cron_auto_confirm_upcoming_trips" model="ir.cron">
            <field name="name">ShuttleBee: Auto Confirm Upcoming Trips</field>
            <field name="model_id" ref="model_shuttle_trip"/>
            <field name="state">code</field>
            <field name="code">model._cron_auto_confirm_upcoming_trips()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>

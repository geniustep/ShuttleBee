<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Trip Reference -->
        <record id="seq_shuttle_trip" model="ir.sequence">
            <field name="name">Shuttle Trip Sequence</field>
            <field name="code">shuttle.trip</field>
            <field name="prefix">TRIP/</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence for Stop Code -->
        <record id="seq_shuttle_stop" model="ir.sequence">
            <field name="name">Shuttle Stop Sequence</field>
            <field name="code">shuttle.stop</field>
            <field name="prefix">STOP/</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>
    </data>
</odoo>
